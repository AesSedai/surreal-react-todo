{
    "name": "backend",
    "version": "0.0.1",
    "private": true,
    "description": "TypeScript + Express API Server",
    "license": "ISC",
    "author": "",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development npx nodemon src/server.ts",
        "surreal": "env-cmd -f ../.env npx ts-node-esm --experimental-specifier-resolution=node ./src/surreal.ts"
    },
    "nodemonConfig": {
        "execMap": {
            "ts": "ts-node-esm --experimental-specifier-resolution=node"
        },
        "ext": "ts,js,json",
        "ignore": [
            "node_modules/**/node_modules"
        ],
        "restartable": "rs"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:import/typescript",
            "prettier"
        ],
        "rules": {
            "no-void": "off",
            "@typescript-eslint/no-dynamic-delete": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/restrict-template-expressions": "off"
        },
        "root": true
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "envalid": "^7.3.1",
        "nanoid": "^4.0.0",
        "surrealdb.js": "^0.2.0",
        "ws": "^8.8.0"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/ws": "^8.5.3",
        "env-cmd": "^10.1.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.1.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "prettier-plugin-organize-imports": "^3.0.0",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    }
}
